<root>
		<!-- Include stylesheets -->
	<styles>
		<include src="file://{resources}/styles/custom_game/sidebar.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/sidebar.js" />
	</scripts>
	<script>
		// Disable built-in top scoreboard in favor of multiteam_top_scoreboard.xml
		GameUI.SetDefaultUIEnabled(DotaDefaultUIElement_t.DOTA_DEFAULT_UI_TOP_TIMEOFDAY, false);
		GameUI.SetDefaultUIEnabled(DotaDefaultUIElement_t.DOTA_DEFAULT_UI_ACTION_PANEL, true);
		GameUI.SetDefaultUIEnabled(DotaDefaultUIElement_t.DOTA_DEFAULT_UI_INVENTORY_PANEL, true);
		GameUI.SetDefaultUIEnabled(DotaDefaultUIElement_t.DOTA_DEFAULT_UI_TOP_HEROES, false);
		GameUI.SetDefaultUIEnabled(DotaDefaultUIElement_t.DOTA_DEFAULT_UI_FLYOUT_SCOREBOARD, true);

		GameUI.SetRenderBottomInsetOverride(0);
	</script>


	<Panel class="menu-tab-container">

		<Panel class="menu-tab-header">
			<Button class="menu-tab-button" onactivate="showTab('#tab-structure');">
				<Label text="B"/>
			</Button>
			<Button class="menu-tab-button" onactivate="showTab('#tab-defense');">
				<Label text="D"/>
			</Button>
			<Button class="menu-tab-button" onactivate="showTab('#tab-infantry');">
				<Label text="I"/>
			</Button>
<!-- 			<Button class="menu-tab-button" onactivate="showTab('#tab-vehicle');">
				<Label text="V"/>
			</Button> -->
		</Panel>

		<Panel class="menu-tab-body" id="menu-tab-body">

		    <Panel class="menu-tab" id="tab-structure">
		    	<Button class="menu-item" onactivate="leftClickItem('npc_ra2_soviet_construction_yard', 'structure');" oncontextmenu="rightClickItem('npc_ra2_soviet_construction_yard', 'structure');">
					<Image src="file://{images}/custom_game/structures/s_conyard.jpg"/>
					<Label id="label_npc_ra2_soviet_construction_yard" text="0"/>
				</Button>
				<Button class="menu-item" onactivate="leftClickItem('npc_ra2_soviet_barracks', 'structure');" oncontextmenu="rightClickItem('npc_ra2_soviet_barracks', 'structure');">
					<Image src="file://{images}/custom_game/structures/handicon.png"/>
					<Label id="label_npc_ra2_soviet_barracks" text="0"/>
				</Button>
				<Button class="menu-item" onactivate="leftClickItem('npc_ra2_tesla_reactor', 'structure');" oncontextmenu="rightClickItem('npc_ra2_tesla_reactor', 'structure');">
					<Image src="file://{images}/custom_game/structures/npwricon.png"/>
					<Label id="label_npc_ra2_tesla_reactor" text="0"/>
				</Button>
		    </Panel>

		    <Panel class="menu-tab" id="tab-defense">
				<Button class="menu-item" onactivate="leftClickItem('npc_ra2_sentry_gun', 'defense');" oncontextmenu="rightClickItem('npc_ra2_sentry_gun', 'defense');">
					<Image src="file://{images}/custom_game/structures/plticon.png"/>
					<Label id="label_npc_ra2_sentry_gun" text="0"/>
				</Button>
		    </Panel>

		    <Panel class="menu-tab" id="tab-infantry">
				<Button class="menu-item" onactivate="leftClickItem('npc_ra2_conscript', 'infantry');" oncontextmenu="rightClickItem('npc_ra2_conscript', 'infantry');">
					<Image src="file://{images}/custom_game/structures/e2icon.png"/>
					<Label id="label_npc_ra2_conscript" text="0"/>
				</Button>
				<Button class="menu-item" onactivate="leftClickItem('npc_ra2_tesla_trooper', 'infantry');" oncontextmenu="rightClickItem('npc_ra2_tesla_trooper', 'infantry');">
					<Image src="file://{images}/custom_game/structures/shkicon.png"/>
					<Label id="label_npc_ra2_tesla_trooper" text="0"/>
				</Button>
		    </Panel>

		    <Panel class="menu-tab" id="tab-vehicle">
		    </Panel>

	    </Panel>

	</Panel>

</root>
